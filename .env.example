# =============================================================================
# Laundry Shuttle — Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git
# =============================================================================

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Laundry Shuttle"
NEXT_PUBLIC_PLATFORM_DOMAIN=laundryshuttle.com

# -----------------------------------------------------------------------------
# Database (Neon PostgreSQL)
# -----------------------------------------------------------------------------
# Get from: https://console.neon.tech → Project → Connection Details
DATABASE_URL=postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/laundry-shuttle?sslmode=require
# Use pooled connection for serverless (Neon provides this automatically)
DATABASE_URL_UNPOOLED=postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/laundry-shuttle?sslmode=require

# -----------------------------------------------------------------------------
# NextAuth.js
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Google OAuth
# -----------------------------------------------------------------------------
# Get from: https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Facebook OAuth
# -----------------------------------------------------------------------------
# Get from: https://developers.facebook.com → App → Settings → Basic
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# -----------------------------------------------------------------------------
# Stripe (Platform Account)
# -----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Stripe Connect
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_xxx
# Platform fee percentage (1% = 0.01)
STRIPE_PLATFORM_FEE_PERCENT=0.01

# -----------------------------------------------------------------------------
# Mapbox
# -----------------------------------------------------------------------------
# Get from: https://account.mapbox.com → Access tokens
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.xxx
MAPBOX_SECRET_TOKEN=sk.xxx

# -----------------------------------------------------------------------------
# Telnyx (SMS)
# -----------------------------------------------------------------------------
# Get from: https://portal.telnyx.com → API Keys
TELNYX_API_KEY=KEY_xxx
TELNYX_MESSAGING_PROFILE_ID=your-messaging-profile-id
TELNYX_PHONE_NUMBER=+1xxxxxxxxxx
TELNYX_WEBHOOK_SECRET=your-telnyx-webhook-secret

# -----------------------------------------------------------------------------
# Amazon SES (Email)
# -----------------------------------------------------------------------------
# Get from: AWS Console → SES → SMTP Settings (or IAM for API keys)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=AKIA_xxx
AWS_SES_SECRET_ACCESS_KEY=your-ses-secret-key
AWS_SES_FROM_EMAIL=noreply@laundryshuttle.com

# -----------------------------------------------------------------------------
# Cloudflare R2 (File Storage)
# -----------------------------------------------------------------------------
# Get from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=laundry-shuttle-assets
R2_PUBLIC_URL=https://cdn.laundryshuttle.com
# Or use Cloudflare's default: https://pub-xxx.r2.dev

# -----------------------------------------------------------------------------
# Firebase (Push Notifications via FCM)
# -----------------------------------------------------------------------------
# Get from: https://console.firebase.google.com → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=laundry-shuttle
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@laundry-shuttle.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----"
# VAPID key for web push
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-public-key

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
# -----------------------------------------------------------------------------
# Get from: https://sentry.io → Project → Settings → Client Keys
NEXT_PUBLIC_SENTRY_DSN=https://xxx@o123.ingest.sentry.io/456
SENTRY_AUTH_TOKEN=sntrys_xxx

# -----------------------------------------------------------------------------
# Google Analytics
# -----------------------------------------------------------------------------
# Get from: https://analytics.google.com → Admin → Data Streams → Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Cron Jobs
# -----------------------------------------------------------------------------
# Secret for authenticating cron job requests (Bearer token)
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# -----------------------------------------------------------------------------
# Platform Admin (Seed Script)
# -----------------------------------------------------------------------------
PLATFORM_ADMIN_EMAIL=admin@laundryshuttle.com
PLATFORM_ADMIN_PASSWORD=changeme123!
